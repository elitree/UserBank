<tr>
<td><%= account.id %></td>
<td><%= account.acct_type %></td>
<td><%= number_to_currency(account.amount, :unit => "$") %></td>
<td><%= link_to 'Deposit', deposit_account_path(account) %>
<td><%= link_to 'Withdraw', withdrawal_account_path(account) %>
<% if current_user.accounts.length < 2 %>
<td></td>
<% else %>
<td><%= link_to 'Transfer', transfer_account_path(account) %>
<% end %>
</tr>