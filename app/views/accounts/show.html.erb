<h1>Account <%= @account.id %> for <%= @user.fullname %>:</h1>

<p id="notice"><%= notice %></p>

<p>
  <b>Account Type:</b>
  <%= @account.acct_type %>
</p>

<p>
  <b>Amount:</b>
  <%= number_to_currency(@account.amount, :unit => "$") %>
</p>

<p>
  <b>Interest Rate:</b>
  <%= @account.interestrate %>
</p>

<%= link_to 'Back', user_path(@account.user_id) %>
