<p id="notice"><%= notice %></p>

<h3><%= @user.firstname + " " + @user.lastname %></h3>

<p>
  <b>Phone:</b>
  <%= @user.phone %>
</p>

<p>
  <b>Email:</b>
  <%= @user.email %>
</p>

<% if @user.accounts.empty? %>
   No accounts for this user... <%= link_to "open one here!", newacct_path %>
<% else %>
  <table class="accounts" summary="User accounts">
  <tr>
  <th>Account</th>
  <th>Type</th>
  <th>Amount</th>
  <th></th>
  <th></th>
  <th></th>
  </tr>
 <%= render @accounts %>
 </table>
<%= will_paginate @accounts %>
<% end %>